<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="unb.poo.mwmobile.acts.MenuHomeActivity" >

    <ImageView
        android:id="@+id/logoUnb"
        android:layout_width="250dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:transitionName="logoUnb"
        android:background="@mipmap/ic_unb" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:transitionName="menuIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:id="@+id/matriculaMenu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        fancy:fb_iconResource="@drawable/ic_menu_white_big"
        fancy:fb_defaultColor="#007e29"
        fancy:fb_radius="80dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp">

        <!--<ImageButton-->
        <!--android:id="@+id/historicoBtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--android:background="#00000000"-->
        <!--android:layout_centerHorizontal="true"/>-->

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/gradeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fancy:fb_iconResource="@mipmap/ic_launcher"
            fancy:fb_defaultColor="#007e29"
            fancy:fb_focusColor="#00E457"
            fancy:fb_radius="50dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gradeBtn"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true" >

        <!--<ImageButton-->
        <!--android:id="@+id/gradeBtn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@mipmap/ic_launcher"-->
        <!--android:background="#00000000"-->
        <!--android:layout_centerHorizontal="true"/>-->

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/historicoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            fancy:fb_iconResource="@mipmap/ic_launcher"
            fancy:fb_borderColor="#FFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#00983a"
            fancy:fb_focusColor="#00E457"
            fancy:fb_iconPosition="top"
            fancy:fb_radius="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historico"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/historicoBtn"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp">

        <!--<ImageButton-->
            <!--android:id="@+id/quadroBtn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/ic_launcher"-->
            <!--android:background="#00000000"-->
            <!--android:layout_centerHorizontal="true"/>-->

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/quadroBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp"
            fancy:fb_iconResource="@mipmap/ic_launcher"
            fancy:fb_borderColor="#FFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#00983a"
            fancy:fb_focusColor="#00E457"
            fancy:fb_iconPosition="top"
            fancy:fb_radius="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quadro"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/quadroBtn"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>



</RelativeLayout>